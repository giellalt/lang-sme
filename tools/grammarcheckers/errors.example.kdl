// Deduplicated error definitions for lang-sme
// This shows how KDL with regex captures can reduce ~150 entries to ~40
//
// How it works:
//   1. CG3 outputs a tag like "real-čohkká"
//   2. Runtime matches against patterns in this file
//   3. Match found: error "spelling-error" with capture word="čohkká"
//   4. Runtime looks up "spelling-error" in FTL, passing {input: "...", word: "čohkká"}
//
// FTL can then use:
//   spelling-error = Spelling error
//       .desc = The word {$input} seems to be a real-word error (matched: {$word})

// =============================================================================
// SPELLING ERRORS - all real-* entries collapse to one
// =============================================================================
//
// Example: CG3 tag "real-čohkká" matches, captures word="čohkká"
// FTL: spelling-error = Spelling error
//      .desc = {$input} is a real-word error

error "spelling-error" {
    match {
        re "real-(?<word>.+)"
        id "unreal-girjji"
    }
    word "${word}"
}

// =============================================================================
// WRONG CASE ERRORS
// =============================================================================
//
// Example: CG3 tag "msyn-wrong-case-acc" matches, captures detail="-acc"

error "wrong-case" {
    match {
        re "msyn-wrong[-_]case(?<detail>.*)"
    }
    detail "${detail}"
}

// =============================================================================
// PUNCTUATION ERRORS
// =============================================================================

error "quotation-marks" {
    match {
        re "punct-aistton(?<type>.*)"
    }
    type "${type}"
}

error "parenthesis-missing-space" {
    match {
        re "no-space-(after|before)-paren(?<detail>.*)"
    }
}

error "punct-rihkku" {
    match {
        id "punct-rihkku"
    }
}

// =============================================================================
// SPACING ERRORS
// =============================================================================

error "spacing" {
    match {
        id "double-space-before"
        id "space-after-paren-beg"
        id "space-before-paren-end"
        id "space-before-punct-mark"
        id "no-space-after-punct-mark"
    }
}

// =============================================================================
// VALENCY ERRORS - 13 entries collapse to one
// =============================================================================
//
// Example: CG3 tag "msyn-valency-ill-acc" matches, captures type="ill-acc"
// FTL: msyn-valency = Valency error
//      .desc = Expected different case: {$valency_type}

error "msyn-valency" {
    match {
        re "msyn-valency-(?<type>.+)"
    }
    valency_type "${type}"
}

// =============================================================================
// DEMONSTRATIVE PHRASE ERRORS
// =============================================================================

error "msyn-demphrase" {
    match {
        re "msyn-demphrase-(?<case>sgill|sgloc|plloc)"
    }
    case "${case}"
}

// =============================================================================
// NUMBER CONGRUENCE ERRORS
// =============================================================================

error "syn-number-congruence" {
    match {
        re "syn-number[_-]congruence[-_]?(?<type>.*)"
    }
    congruence_type "${type}"
}

// =============================================================================
// LEXICAL ERRORS
// =============================================================================
//
// Example: CG3 tag "lex-transitive" matches, captures type="transitive"

error "lex" {
    match {
        re "lex-(?<type>.+)"
    }
    lex_type "${type}"
}

