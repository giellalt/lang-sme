<?xml version="1.0" encoding="UTF-8"?>
<modes>
  <mode name="smegram" gendebug="yes">
    <pipeline>
      <program name="hfst-tokenise" debug-suff="morph">
        <arg name="--gtd"/>
        <file name="../preprocess/tokeniser-gramcheck-gt-desc.pmhfst"/>
      </program>
      <program name="vislcg3" debug-suff="mwe-dis">
        <arg name="-g"/>
        <file name="../preprocess/mwe-dis.cg3"/>
      </program>
      <program name="cg-mwesplit" debug-suff="mwe-split"/>
      <program name="vislcg3" debug-suff="val">
        <arg name="-g"/>
        <file name="../../src/syntax/valency.cg3"/>
      </program>
      <program name="vislcg3" debug-suff="disam">
        <arg name="-t"/>
        <arg name="-g"/>
        <file name="disambiguator.cg3"/>
      </program>
      <program name="vislcg3" debug-suff="gc">
        <arg name="-t"/>
        <arg name="-g"/>
        <file name="grammarchecker.cg3"/>
      </program>
      <program name="divvun-suggest" debug-suff="suggest">
        <arg name="-g"/>
        <file name="../../src/generator-gt-norm.hfstol"/>
        <arg name="-m"/>
        <file name="errors.xml"/>
      </program>
    </pipeline>
  </mode>


