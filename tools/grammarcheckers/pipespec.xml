<pipespec language="sme"
          developer="Giellatekno"
          version="0.42"
          contact="Linda Wiechetek linda.wiechetek@uit.no">

  <pipeline name="smegram"
            language="sme_NO"
            type="Grammar error">
    <tokenize><arg n="../tokenisers/tokeniser-gramcheck-gt-desc.pmhfst"/></tokenize>
    <cg><arg n="../../src/syntax/valency.cg3"/></cg>
    <cg><arg n="../tokenisers/mwe-dis.cg3"/></cg>
    <mwesplit/>
    <cg><arg n="disambiguator.cg3"/></cg>
    <cg><arg n="grammarchecker.cg3"/></cg>
    <suggest>
      <arg n="../../src/generator-gt-norm.hfstol"/>
      <arg n="errors.xml"/>
    </suggest>
  </pipeline>

</pipespec>
